{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "outDir": "../js/es13",
        "paths": {
            // Required by @types/node
            "undici-types": ["../node_modules/undici-types/index.d.ts"],
            "$kawariki:es-polyfill": ["./es13-polyfill.mts", "../js/es13/es13-polyfill.mjs"],
            "$kawariki:es/": ["./", "../js/es13/"],
        },
    },
    "files": [
        "es13-polyfill.mts",
        "logger.mts",
        "rpg-definitions.d.ts",
        "rpg-inject.mts",
        "rpg-remap.mts",
        "rpg-vars.ts",
    ],
}